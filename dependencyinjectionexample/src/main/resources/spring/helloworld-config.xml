<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="helloWorldFactory" class="com.mycompany.services.HelloWorldFactory" />
    <bean id="french" factory-bean="helloWorldFactory" factory-method="createHelloWorldService">
        <constructor-arg value="fr"/>
    </bean>

    <bean id="helloWorldServicePolish" factory-bean="helloWorldFactory" factory-method="createHelloWorldService">
        <constructor-arg value="pl"/>
    </bean>

    <bean id="helloWorldServiceGermanX" factory-bean="helloWorldFactory" factory-method="createHelloWorldService">
        <constructor-arg value="de"/>
    </bean>

    <bean id="helloWorldServiceRussian" factory-bean="helloWorldFactory" factory-method="createHelloWorldService">
        <constructor-arg value="ru"/>
    </bean>


    <beans profile="english">
        <import resource="english-hello-world.xml"/>
    </beans>

    <beans profile="spanish">
        <import resource="spanish-hello-world.xml"/>
    </beans>
</beans>